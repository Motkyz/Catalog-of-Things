<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:paddingHorizontal="24dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создание папки"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_text_for_name_folder"

        android:layout_marginVertical="20dp"
        style="@style/text.Header">
    </TextView>

    <EditText
        android:id="@+id/edit_text_for_name_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"

        android:layout_marginVertical="20dp"


        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"

        android:background="@drawable/edit_text_border"
        android:hint="Введите название для папки">
    </EditText>

    <Button
        android:id="@+id/create_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginVertical="20dp"


        style="@style/infoAboutNote"
        android:clickable="true"
        app:icon="@drawable/ic_accept"
        app:iconTint="@color/accent"
        android:text="Создать"
        app:layout_constraintTop_toBottomOf="@id/edit_text_for_name_folder"
        app:layout_constraintEnd_toEndOf="@id/edit_text_for_name_folder">
    </Button>

    <Button
        android:id="@+id/cancel_create_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/infoAboutNote"
        android:clickable="true"
        android:text="Отмена"
        app:layout_constraintTop_toTopOf="@id/create_new_folder"
        app:layout_constraintStart_toStartOf="@id/edit_text_for_name_folder">
    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>